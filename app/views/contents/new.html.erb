<%= form_tag(contents_path, method: 'post') do  %>
  <%= hidden_field_tag "authenticity_token", form_authenticity_token %>
  Welcome Title:<%= yield :custom_title %>
  <form class="form-horizontal">
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Color</label>
      <div class="col-xs-4">
        <%= content_tag(:color) do %>
          <input name="content[color]" type="text" class="form-control" id="inputEmail3" placeholder="Color">
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword3" class="col-sm-2 control-label">Font</label>
      <div class="col-xs-4">
        <%= content_tag(:font) do %>
          <input name="content[font]" type="text" class="form-control" id="inputPassword3" placeholder="Font">
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword32" class="col-sm-2 control-label">Title</label>
      <div class="col-xs-4">
        <%#= content_tag(:title) do %>
          <input name="content[title]" type="text" class="form-control" placeholder="Title">
          <input type="hidden" name="content[user_id]" value="<%= current_user.id %>">
        <%# end %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  </form>
<% end %>